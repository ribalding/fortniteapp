<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tomandryan.fortnite.activity.WeaponComparisonActivity">

    <Spinner
        android:id="@+id/weaponTypeA"
        android:layout_width="185dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="243dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/weaponComparisonToolTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Weapon Comparison Tool"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/weaponTypeB"
        android:layout_width="185dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="243dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.961"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/weaponSelectionA"
        android:layout_width="102dp"
        android:layout_height="38dp"
        android:text="Current Weapon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weaponTypeA"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/currentWeaponDPS"
        android:layout_width="99dp"
        android:layout_height="28dp"
        android:text="dps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weaponSelectionA"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/currentWeaponDamage"
        android:layout_width="99dp"
        android:layout_height="28dp"
        android:text="damage"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentWeaponDPS" />

    <TextView
        android:id="@+id/currentWeaponFireRate"
        android:layout_width="97dp"
        android:layout_height="26dp"
        android:text="fire rate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentWeaponDamage"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/currentWeaponMagazineSize"
        android:layout_width="85dp"
        android:layout_height="21dp"
        android:text="magazine size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentWeaponFireRate"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/currentWeaponReloadTime"
        android:layout_width="76dp"
        android:layout_height="24dp"
        android:text="reload time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentWeaponMagazineSize"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/currentWeaponRarity"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:text="weapon rarity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentWeaponReloadTime"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/currentWeaponBulletType"
        android:layout_width="99dp"
        android:layout_height="19dp"
        android:text="bullet type"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentWeaponRarity"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/weaponSelectionB"
        android:layout_width="102dp"
        android:layout_height="38dp"
        android:text="Potential Weapon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weaponTypeB"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/potentialWeaponDPS"
        android:layout_width="99dp"
        android:layout_height="28dp"
        android:text="dps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weaponSelectionB"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/potentialWeaponDamage"
        android:layout_width="99dp"
        android:layout_height="28dp"
        android:text="damage"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potentialWeaponDPS" />

    <TextView
        android:id="@+id/potentialWeaponFireRate"
        android:layout_width="97dp"
        android:layout_height="26dp"
        android:text="fire rate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potentialWeaponDamage"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/potentialWeaponMagazineSize"
        android:layout_width="85dp"
        android:layout_height="21dp"
        android:text="magazine size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potentialWeaponFireRate"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/potentialWeaponReloadTime"
        android:layout_width="76dp"
        android:layout_height="24dp"
        android:text="reload time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potentialWeaponMagazineSize"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/potentialWeaponRarity"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:text="weapon rarity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potentialWeaponReloadTime"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/potentialWeaponBulletType"
        android:layout_width="99dp"
        android:layout_height="19dp"
        android:text="bullet type"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potentialWeaponRarity"

        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/compareDPS"
        android:layout_width="73dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="316dp"
        android:text="dps comp"
        app:layout_constraintEnd_toStartOf="@+id/potentialWeaponDPS"
        app:layout_constraintStart_toEndOf="@+id/currentWeaponDPS"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/compareWeaponDamage"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="damage comp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compareDPS"
        app:layout_constraintVertical_bias="0.0" />



</android.support.constraint.ConstraintLayout>
